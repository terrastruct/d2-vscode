{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"target": "es2022",
		"lib": ["es2022"],
		"outDir": "dist",
		"rootDirs":[
			"./client/src",
			"./server/src"
		],
		"sourceMap": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"webpack.config.js"
	],
	"references": [
		{ "path": "./client/tsconfig.json" },
		{ "path": "./server/tsconfig.json" }
	]
}